<%= form_with model: (@transaction_entry, url: new_transaction_entries_path, method: :post) do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
	</div>
	<div>
		<%= f.label :amount %>
		<%= f.number_field :amount, autofocus: true, autocomplete: "amount", class: "form-control" %>
	</div>
	<div>
		<%= form.fields_for :transaction_categories do |category_fields| %>
	    <%= category_fields.label :category_id, 'Category' %>
	    <%= category_fields.collection_select :category_id, Category.all, :id, :name, prompt: true %>
  	<% end %>
	</div>
	<div class="d-grid">
		<%= f.submit, "Save" class: 'btn btn-outline-dark' %>
	</div>
end